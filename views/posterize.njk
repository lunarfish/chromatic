{% extends "layout.njk" %}

{% block header %}
<h1>{{ title }}</h1>
<vue-image src="{{ source }}" alt="original" style="height:200px"></vue-image>
<vue-image src="{{ target }}" alt="posterized" style="height:200px"></vue-image>
<vue-image src="{{ thumb }}" alt="thumbnail" style="height:200px"></vue-image>
<p>Maximum vibrancy: {{ vibrancy }}</p>
<div style="display:inline-block;
			margin:0.25em; 
			width:100%; 
			height:3em; 
			line-height:3em;
			text-align:center; 
			background-color: {{'#'+colour}};">
</div>
<hr/>
{% endblock %}
{% block content %}
{% for colour in palette %}
<div style="display:inline-block;
			margin:0.25em; 
			width:3em; 
			height:3em; 
			line-height:3em;
			text-align:center; 
			background-color: {{ '#'+colour}};">
</div>
{% endfor %}
{% endblock %} 